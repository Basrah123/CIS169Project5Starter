@page
@model CourseCatalog.Pages.CourseListModel

@{
    ViewData["title"] = "Course List";
}

<h1>Course List</h1>

<!-- New course form will go here -->
<form method="post">
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NewCourse.Id" class="control-label"></label>
        <input asp-for="NewCourse.Id" class="form-control" />
        <span asp-validation-for="NewCourse.Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewCourse.CourseName" class="control-label"></label>
        <input asp-for="NewCourse.CourseName" class="form-control" />
        <span asp-validation-for="NewCourse.CourseName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewCourse.CourseDescription" class="control-label"></label>
        <input asp-for="NewCourse.CourseDescription" class="form-control" />
        <span asp-validation-for="NewCourse.CourseDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewCourse.RoomNumber" class="control-label"></label>
        <input asp-for="NewCourse.RoomNumber" class="form-control" />
        <span asp-validation-for="NewCourse.RoomNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewCourse.StartTime" class="control-label"></label>
        <input asp-for="NewCourse.StartTime" class="form-control" />
        <span asp-validation-for="NewCourse.StartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewCourse.EndTime" class="control-label"></label>
        <input asp-for="NewCourse.EndTime" class="form-control" />
        <span asp-validation-for="NewCourse.EndTime" class="text-danger"></span>
    </div>


<div class="form-group">
    <input type="submit" value="Create" class="btn btn-primary" />
</div>
</form>

<!-- list of course will go here -->
<table class="table mt-6">
    <thead>
        <tr>
            <th scope="col">Course Id</th>
            <th scope="col">Course Name</th>
            <th scope="col">Course Description</th>
            <th scope="col">Room Number</th>
            <th scope="col">Start Time</th>
            <th scope="col">End Time</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var course in Model.CourseList)
    {
        <tr>
            <td>@course.Id</td>
            <td>@course.CourseName</td>
            <td>@course.CourseDescription</td>
            <td>@course.RoomNumber</td>
            <td>@course.StartTime</td>
            <td>@course.EndTime</td>
            <td>
                <form method="post" asp-page-handler="Delete" asp-route-id="@course.Id">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts{
    <partial name ="_ValidationScriptsPartial"/>
    }
